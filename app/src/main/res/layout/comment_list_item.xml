<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/layoutDonorItem">

    <TextView
        android:id="@+id/tvCommentDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Comment Description"
        android:textColor="@color/textColorPrimary"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/tvAnswerBy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="User"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tvCommentDesc"
        android:textColor="@color/textColorPrimary"
        android:textAppearance="?android:textAppearanceSmall" />

    <TextView
        android:id="@+id/tvAnswerDateTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Date Time"
        android:gravity="right"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tvCommentDesc"
        android:textColor="@color/textColorPrimary"
        android:textAppearance="?android:textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvAnswerDateTime"/>

</RelativeLayout>