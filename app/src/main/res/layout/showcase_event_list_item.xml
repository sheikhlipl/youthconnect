<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/showcase_item_card_margin"
    android:elevation="@dimen/card_elevation"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/showcase_item_card_padding"
            android:layout_marginLeft="@dimen/showcase_item_card_padding"
            android:layout_marginRight="@dimen/showcase_item_card_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event Name"
                android:elevation="@dimen/text_elevation"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/primary_text_light"
                android:id="@+id/tvActivityName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvActivityName"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event Purpose"
                android:elevation="@dimen/text_elevation"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/primary_text_light"
                android:id="@+id/tvActivityPurpose" />

            <!--<ImageView-->
                <!--android:id="@+id/imgDelete"-->
                <!--android:layout_width="@dimen/showcase_item_delete_image_width_height"-->
                <!--android:layout_height="@dimen/showcase_item_delete_image_width_height"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/ic_delete"-->
                <!--/>-->

            <!--<ImageView-->
                <!--android:id="@+id/imgShare"-->
                <!--android:layout_width="@dimen/showcase_item_delete_image_width_height"-->
                <!--android:layout_height="@dimen/showcase_item_delete_image_width_height"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="@dimen/showcase_item_delete_image_margin_left"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/ic_share"-->
                <!--/>-->
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_horizontal_list"
            android:layout_width="match_parent"
            android:fadeScrollbars="true"
            android:layout_height="120dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:elevation="@dimen/text_elevation"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/primary_text_light"
                android:id="@+id/tvPostedBy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentRight="true"
                android:elevation="@dimen/text_elevation"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/primary_text_light"
                android:id="@+id/tvDate" />

        </RelativeLayout>

    </LinearLayout>
<!--</LinearLayout>-->
</android.support.v7.widget.CardView>